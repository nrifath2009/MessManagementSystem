@model MessManagementSystem.Models.Meal

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Meal</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MealId)

        <div class="form-group">
            @Html.LabelFor(model => model.MealDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MealDate)
                @Html.ValidationMessageFor(model => model.MealDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MemberId, "MemberId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MemberId", String.Empty)
                @Html.ValidationMessageFor(model => model.MemberId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NoOfMeal, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NoOfMeal)
                @Html.ValidationMessageFor(model => model.NoOfMeal)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
