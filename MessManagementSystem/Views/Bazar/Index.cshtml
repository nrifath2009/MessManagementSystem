@model IEnumerable<MessManagementSystem.Models.Bazar>

@{
    ViewBag.Title = "Bazaar Information's";
}

<h2>Bazaar Information's</h2>

<p>
    @Html.ActionLink("Create New Bazaar", "Create",null,new{@class="btn btn-success"})
</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Member Name</label>

        <select name="memberId" class="form-control">
            <option value=""></option>
            @foreach (var member in ViewBag.Members)
            {
                <option value="@member.MemberId">@member.Name</option>
            }

        </select>


    </div>
    <div class="form-group">
        <input class="btn btn-success" type="submit" value="Show">
    </div>
}
@if (ViewBag.MemberName != null)
{
    foreach (var member in ViewBag.MemberName)
    {
        <h3>@member</h3>
    }

}

<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Member.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BazarDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BazarAmount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Member.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BazarDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BazarAmount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BazarId }) |
            @Html.ActionLink("Details", "Details", new { id=item.BazarId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BazarId })
        </td>
    </tr>
   
}
    <tr>
        <td></td>
        <th>Total Bazar</th>
        @if (ViewBag.TotalBazar != null)
        {
            <td>
                @ViewBag.TotalBazar
            </td>
        }
       
        <td></td>
    </tr>
</table>
